       <fieldset>
        <h2>Add a book:</h2>
        <form id="addBook" action="/books" method="POST">
            <label for="isbn">ISBN:</label>
            <input type="text" id="isbn" name="isbn">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title">
            <label for="author">Author:</label>
            <input type="text" id="author" name="author">
            <label for="genre">Genre:</label>
            <select id="genre" name="genre">
                {{#each genres}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <button>Add</button>
        </form>
    </fieldset>
    <br>
    <fieldset>
        <fieldset>
            <h2>Search Catalogue:</h2>
            <h3>Filter by Genre.</h3>
            <form id="search-books" method="GET" action="/books">
                <label for="genre">Genre:</label>
                <select id="genre" name="genre">
                    <option></option>
                    {{#each genres}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <input type="submit">
                <a href='/books'><button>Reset</button></a>
            </form>
        </fieldset>
        <br>
        <h2>Books Catalogue</h2>
        <table>
            <thead>
                <tr>
                    <th>ISBN</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Genre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each books}}
                <tr>
                    <td>{{isbn}}</td>
                    <td>{{title}}</td>
                    <td>{{author}}</td>
                    <td>{{books}}</td>
                    <td>{{genre}}</td>
                    <td>
                        <button type="button"><a href="/books/{{isbn}}">Edit</a></button>
                        <button type="button" name="delete_book" onclick="deleteBook({{isbn}})">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </fieldset>